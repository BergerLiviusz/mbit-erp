entrypoint = "index.js"
modules = ["nodejs-22", "postgresql-16"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm run start"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["sh", "-c", "npm install && DATABASE_URL='file:/home/runner/workspace/apps/server/prisma/dev.db' npm run db:generate && npm run build"]

[agent]
expertMode = true

[workflows]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33459
externalPort = 3001

[[ports]]
localPort = 41845
externalPort = 3002
